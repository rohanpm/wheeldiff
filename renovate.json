{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pip_requirements": {
    "enabled": false
  },
  "pip-compile": {
    "enabled": true,
    "fileMatch": [
      "requirements[^/]*\\.txt$"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "at any time"
    ]
  }
}